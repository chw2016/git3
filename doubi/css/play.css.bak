@charset "utf-8";

html {height: 100%;
-webkit-tap-highlight-color:rgba(0,0,0,0); 
-webkit-tap-highlight:rgba(0,0,0,0);
-webkit-text-size-adjust:none;
overflow:-moz-scrollbars-vertical; overflow:hidden;}
body { position: relative; font-family:"Microsoft Yahei"; width: 640px; max-width: 640px; min-width: 640px; height: 100%; 
margin: 0 auto; font-size:0.75em; }
* {
  -webkit-transition-timing-function: ease-in-out;
     -moz-transition-timing-function: ease-in-out;
      -ms-transition-timing-function: ease-in-out;
       -o-transition-timing-function: ease-in-out;
          transition-timing-function: ease-in-out;
}
header{width:100%;height: 190px;padding:20px 0;background:#00a098;}
	aside{float:left;width:200px;color:#fff; text-align:center;font-size:38px;
	padding:0 0 30px;line-height:50px;border-right:2px #fff solid;}
	aside b{ display:block; font-size:80px; line-height:100px;}
	.feilei{ float:left;width:400px;padding:0 0 0 20px;}
	.feilei span{display:inline-block;float:left;width:125px;height:50px;margin:4px;background:#fff url(../img/icon_02.png) left no-repeat;line-height:50px;border-radius:12px;font-size:28px;color:#00a098;text-indent:1.6em;}
	.feilei span.this{background:#ea7215 url(../img/icon_01.png) left no-repeat;color:#fff;}
	.feilei .kong20{ clear:both; line-height:1px; height:20px;}
	.feilei b{clear:both;display:block;width:220px;margin:0 auto;padding:0;height:50px;background:#ea7215;border-radius:12px; line-height:50px;font-size:28px; text-align:center;color:#fff;}
	section{width:100%;height:100%;}
	section h2{line-height:10px;font-size:18px;font-weight:100;padding:10px 0 0 0;color:#00a098;text-indent:0.5em;}
	ul{margin:0;padding:0 10px;}
	li{margin:0;padding:0;list-style:none;display:inline-block;float:left;width:140px;height:140px;background:#00a098;margin:13px;padding:20px;border-radius:12px;font-size:28px;  text-align:center;color:#fff;}
	li b{display:block;line-height:90px;font-size:70px; text-align:center;font-family:Arial;}
	li.lion{background:#ea7215;}
	li.gr{background:#ADADAD;}
	li img{vertical-align:middle;padding-bottom:5px;}
	footer{position:fixed;bottom:0px;width:100%;height: 20px;line-height: 30px;padding:20px 0;background:#00a098;color:#fff; text-align:center;font-size:24px;margin-bottom:0;}